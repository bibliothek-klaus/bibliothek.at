@{
    ViewBag.Title = "Öffentliche Bibliothek Klaus-Weiler";
}

<h1><img src="/Content/logo.jpg" alt="Bibliothek Klaus-Weiler<" title="Bibliothek Klaus-Weiler<" /> Willkommen in der Bibliothek Klaus-Weiler</h1>
Sie finden uns in der Mittelschule im Obergeschoß. Unser Sortiment reicht von Büchern, Zeitschriften, über DVD's bis hin zu Hörbüchern.<br />
<br />

<div id="carouselStart" class="carousel slide hidden-xs" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#carouselStart" data-slide-to="0" class="active"></li>
        <li data-target="#carouselStart" data-slide-to="1"></li>
        <li data-target="#carouselStart" data-slide-to="2"></li>
        <li data-target="#carouselStart" data-slide-to="3"></li>
        <li data-target="#carouselStart" data-slide-to="4"></li>
        <li data-target="#carouselStart" data-slide-to="5"></li>
        <li data-target="#carouselStart" data-slide-to="6"></li>
        <li data-target="#carouselStart" data-slide-to="7"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Content/Pic_01.jpg" alt="...">
            <div class="carousel-caption"></div>
        </div>
        <div class="item">
            <img src="~/Content/Termin.jpg" alt="...">
            <div class="carousel-caption">
                @Html.ActionLink("Veranstaltungen", "Veranstaltungen", null, new { style = "color:#ffffff; font-size:40px;" })
            </div>
        </div>
        <div class="item">
            <img src="/Content/Image1.jpg" alt="...">
            <div class="carousel-caption"></div>
        </div>
        <div class="item">
            <img src="/Content/Image3.jpg" alt="...">
            <div class="carousel-caption"></div>
        </div>
        <div class="item">
            <img src="/Content/Image4.jpg" alt="...">
            <div class="carousel-caption"></div>
        </div>
        <div class="item">
            <img src="/Content/Image5.jpg" alt="...">
            <div class="carousel-caption"></div>
        </div>
        <div class="item">
            <img src="/Content/Image6.jpg" alt="...">
            <div class="carousel-caption"></div>
        </div>
        <div class="item">
            <img src="/Content/image7.jpg" alt="...">
            <div class="carousel-caption"></div>
        </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#carouselStart" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#carouselStart" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-xs-12 col-lg-4">
        <h2><i class="fa fa-clock-o" aria-hidden="true"></i> Öffnungszeiten</h2>

        <table class="table table-bordered">
            <tr>
                <th>Mo - Fr</th>
                <td>17:00 - 19:30</td>
            </tr>
            <tr>
                <th>So</th>
                <td>09:00 - 11:30</td>
            </tr>
            <tr>
                <td colspan="2">
                    <span>An Feiertagen geschlossen!</span>

                    <table class="table table-condensed" style="margin-bottom:0px;">
                        @foreach (var item in @ViewBag.PublicHolidays)
                        {
                            <tr>
                                <td style="font-size:11px; padding:2px;">@item.Date.ToString("dd.MM.yyyy")</td>
                                <td style="font-size:11px; padding:2px;">@item.LocalName</td>
                            </tr>
                        }
                    </table>
                </td>
            </tr>
        </table>
    </div>
    <div class="col-xs-12 col-lg-4">
        <h2><i class="fa fa-map-marker" aria-hidden="true"></i> Standort</h2>

        Treietstraße 17b<br />
        6833 Klaus<br />
        Mittelschule Klaus-Weiler-Fraxern
    </div>
    <div class="col-xs-12 col-lg-4">
        <h2><i class="fa fa-book" aria-hidden="true"></i> Bestand</h2>

        <table class="table table-condensed" style="width:100%">
            <tr>
                <th>Bücher</th>
                <td id="BookCount" class="MediaCount"></td>
            </tr>
            <tr>
                <th>Filme</th>
                <td id="MovieCount" class="MediaCount"></td>
            </tr>
            <tr>
                <th>Hörbücher</th>
                <td id="AudioBookCount" class="MediaCount">wird geladen</td>
            </tr>
            <tr>
                <th>
                    <a href="/Medien/Zeitschriftenabos">Zeitschriftenabos</a>
                </th>
                <td class="MediaCount">55</td>
            </tr>
        </table>
    </div>
</div>

<script type="text/javascript">
    GetMediaStatus();
</script>
