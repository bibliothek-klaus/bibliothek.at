@model List<bibliothek.at.Models.CalendarEvent>
@{
    ViewBag.Title = "Veranstaltungen";
}

<div class="row">
    <div class="col-xs-12">
        <h2>Veranstaltungen</h2>

        <table class="table table-hover">
            @foreach (var item in Model)
            {
                <tr class="visible-xs">
                    <td class="text-center">
                        <i class="fa fa-3x fa-calendar" aria-hidden="true"></i><br /><br />
                        <strong>@item.Date.ToString("dd.MM.yyyy")</strong><br />
                        um @item.Date.ToString("HH:mm")
                    </td>
                </tr>
                <tr>
                    <td class="text-center hidden-xs">
                        <i class="fa fa-3x fa-calendar" aria-hidden="true"></i><br /><br />
                        <strong>@item.Date.ToString("dd.MM.yyyy")</strong><br />
                        um @item.Date.ToString("HH:mm")
                    </td>
                    <td>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@item.Title</h3>
                            </div>
                            <div class="panel-body event">
                                @Html.Raw(item.Description)
                                @if (@item.Location != null)
                                {
                                    <br />
                                    <br />
                                    <i class="fa fa-map-marker" aria-hidden="true"></i> @item.Location
                                }
                            </div>
                        </div>                        
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

<script type="text/javascript">
    ParseEmailAddresses();
</script>