@model bibliothek.at.Models.MediaItem
@{
    ViewBag.Title = Model.Sachtitel;
}

<h2>@Model.Sachtitel</h2>

<div class="row">
    <div class="col-xs-12 col-sm-4">
        <img class="img-responsive" src="@Model.ImageUrl" alt="@Model.Sachtitel" title="@Model.Sachtitel" />
    </div>
    <div class="col-xs-12 col-sm-8">@Model.Rezension</div>
    
    <div class="col-xs-12" style="margin-top:10px;">
        <table class="table table-bordered">
            <tr>
                <th>Verfasser</th>
                <td>@Model.Verfasser</td>
            </tr>
            <tr>
                <th>Verlag</th>
                <td>@Model.Verlag</td>
            </tr>
            <tr>
                <th>ISBN</th>
                <td>@Model.ISBN</td>
            </tr>
        </table>
    </div>
</div>

    @if (Model.SimilarBooks != null)
    {
        <div class="row equal">

            @foreach (var item in Model.SimilarBooks.OrderByDescending(o => o.Mediennummer))
            {
                <div class="col-xs-12 col-sm-4 col-md-3">
                    <div class="thumbnail">
                        <div class="w-100" style="height:280px; display:block; background-image:url('@item.ImageUrl'); background-repeat:no-repeat; background-size:100%;"></div>
                        <div class="caption text-center">
                            <h4>@item.Title <small>@item.Verfasser</small></h4>
                            @if (item.Mediennummer > 0)
                            {
                                <a href="/Medien/Detail/@item.Mediennummer" class="btn btn-primary">Details</a>
                            }
                            else
                            {
                                <a href="@item.Url" class="btn btn-sm btn-danger">Bei Amazon.de kaufen</a>
                            }
                        </div>
                    </div>
                </div>

            }

        </div>


