@model List<bibliothek.at.Models.Magazine>
@{
    ViewBag.Title = "Zeitschriftenabos";
}

<h2>Zeitschriftenabos</h2>


<div class="row equal">

        @foreach (var item in Model)
        {
            <div class="col-xs-4">
                <div class="thumbnail">
                    <img src="http://via.placeholder.com/350x150?text=@item.Name" class="img-responsive" alt="@item.Name" title="@item.Name" />
                    <div class="caption">
                        <h3>@item.Name</h3>
                        @if (item.Description != null)
                        {
                            <p>@item.Description</p>
                        }
                        @if (item.Website != null)
                        {
                            <a href="@item.Website" class="btn btn-primary">weitere Informationen</a>
                        }
                        @if (item.PublicationFrequency != null)
                        {
                            <table class="table table-bordered" style="margin-top:20px;">
                                <tr>
                                    <th>Erscheinungsweise</th>
                                    <td>@item.PublicationFrequency</td>
                                </tr>
                            </table>
                        }
                    </div>
                </div>
            </div>
        }
</div>