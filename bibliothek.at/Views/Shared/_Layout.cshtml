<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="format-detection" content="telephone=no">
    <title>@ViewBag.Title - Öffentliche Bibliothek Klaus-Weiler</title>
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" media="all" />
    <link href="@Url.Content("~/Content/font-awesome.min.css")" rel="stylesheet" type="text/css" media="all" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" media="all" />
    <link href="@Url.Content("~/Content/Print.css")" rel="stylesheet" type="text/css" media="print" />
    <script src="~/Scripts/jquery-2.2.4.min.js"></script>
    <script src="@Url.Content("~/Scripts/common.js")" type="text/javascript"></script>
</head>
<body>

    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Bibliothek Klaus-Weiler</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Suche", "Suche", "Medien")</li>
                    <li>@Html.ActionLink("Neuanschaffungen", "Neuanschaffungen", "Medien")</li>
                    <li>@Html.ActionLink("Trends", "Trends", "Medien")</li>    
                    <li>@Html.ActionLink("Veranstaltungen", "Veranstaltungen", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Weiteres <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Team", "Team", "Home")</li>
                            <li>@Html.ActionLink("Benutzer- und Gebührenordnung", "Benutzererklaerung", "Home")</li>
                        </ul>
                    </li>
                </ul>
                <div id="quicksearch">
                @using (Html.BeginForm("QuickSearch", "Medien", FormMethod.Post, new { Class = "navbar-form navbar-right"}))
                {
                    <div class="form-group">
                        <input type="text" name="search" class="form-control" placeholder="Medien Suche ...">
                    </div>
                    <button type="submit" class="btn btn-default">Suchen</button>
                }
                </div>
            </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
    </nav>

    <div class="container body-content">
        <div class="content">
            @RenderBody()
        </div>

        <footer>
            <div class="row">
                <div class="col-xs-12 col-sm-6">
                    @Html.ActionLink("Links", "Links", "Home") |
                    @Html.ActionLink("Subventionsgeber", "Subventionsgeber", "Home") |
                    @Html.ActionLink("Impressum", "Index", "Impressum") |
                    @Html.ActionLink("Kontakt", "Index", "Kontakt")
                </div>
                <div class="col-xs-12 col-sm-6 text-right">&copy; p-AIR, v7.3.35</div>
            </div>
        </footer>
    </div>

    <script src="/Scripts/bootstrap.min.js"></script>
    <script src="/Scripts/jquery.fittext.js"></script>
    <!-- Global Site Tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-106595536-4"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments) };
        gtag('js', new Date());
        gtag('config', 'UA-106595536-4');
    </script>
    @RenderSection("scripts", false)
</body>
</html>