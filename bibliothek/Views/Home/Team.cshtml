@model List<bibliothek.Models.Team>
@{
    ViewData["Title"] = "Team";
}

<h2>Team</h2>

<div class="row equal">
    @foreach (var item in Model)
    {
        <div class="col-6 col-sm-4 col-lg-3 col-xl-2 mb-4">
            <div class="text-center">
                <img src="/Team/@item.Image" />
                <div>
                    <h4>@item.Name</h4>
                    @item.Description
                </div>
            </div>
        </div>
    }
</div>